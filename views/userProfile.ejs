
<%- include('./userHomeHeader') %>
  <div class="text-dark d-flex justify-content-center"><%=message%></div>
  <a href="/user/logout" style="float: right; background-color:dodgerblue;border-radius: 2px; color: white;margin:4px;text-decoration: none; padding: 2px;">Logout</a>
  <div class="profile-container">
    <h2 class="profile-header">User Profile</h2>

    <form id="profileForm" method="post" action="/user/updateProfile">
      <div class="mb-3">
        <label for="name" class="form-label">Name</label>
        <input type="text" class="form-control" id="name" name="name" value="<%=user.name%>">
      </div>
      <div class="mb-3">
        <label for="email" class="form-label">Email</label>
        <input type="email" class="form-control" id="email" name="email" value="<%=user.email%>" readonly>
      </div>
      <div class="mb-3">
        <label for="phone" class="form-label">Phone Number</label>
        <input type="text" class="form-control" id="phone" name="phone" value="<%=user.phoneNumber%>">
      </div>
      <div class="d-grid gap-2">
        <button type="submit" id="updateProfile" class="btn btn-primary">Update Profile</button>
      </div>
    </form>
  </div>
